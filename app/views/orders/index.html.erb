<div class="border">
<fieldset>
  <Legend>Navigation</Legend>

<div class="navbar"><%= link_to image_tag("administration.JPG", size: "70x70", alt: "Administration"), users_path, admin: true, :title => "Administration" %></div>
<div class="navbar"><%= link_to image_tag("adressverwaltung.JPG", size: "70x70", alt: "Customermanagement"), customers_path, :title => "Customermanagement" %></div>
<div class="navbar"><%= link_to 'New Order', new_order_path %></div>
</fieldset>
<br>
<fieldset>
<Legend>Orders</Legend>

<table class="datatable">
  <thead>
    <tr>
      <th>ID</th>
      <th>Order Date</th>
      <th>Text/Message</th>
      <th>Customer</th>
      <th>Comment</th>
      <th>Bills</th>
      <th>Building License</th>
      <th>Finish Date</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.ordernumber %></td>
        <td><%= order.entry_time %></td>
        <td><%= order.text %></td>
        <td><%= order.customer.sortname %></td>
        <td><%= order.comment %></td>
        <td><%= order.bills %></td>
        <td><%= order.building_license %></td>
        <td><%= order.finish_time %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</fieldset>
<br>
</div> <!-- class border div -->

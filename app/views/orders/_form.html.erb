<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :ordernumber %>
    <%= form.text_field :ordernumber %>
  </div>

  <div class="field">
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>

  <div class="field">
    <%= form.label :customer %>
    <%= collection_select(:order, :customer_id, Customer.all, :id, :name_with_initial) %>
  </div>

  <div class="field">
    <%= form.label :entry_time %>
    <%= form.date_field :entry_time %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>

  <div class="field">
    <%= form.label :building_license %>
    <%= form.text_field :building_license %>
  </div>

  <div class="field">
    <%= form.label :bills %>
    <%= form.text_field :bills %>
  </div>

  <div class="field">
    <%= form.label :finish_time %>
    <%= form.date_field :finish_time %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<fieldset>
  <Legend>Navigation</Legend>

<div class="navbar"><%= link_to image_tag("administration.JPG", size: "70x70", alt: "Administration"), users_path, admin: true %></div>
<div class="navbar"><%= link_to image_tag("auftragsverwaltung.JPG", size: "70x70", alt: "Ordermanagement"), orders_path %></div>
<div class="navbar"><%= link_to 'New Customer', new_customer_path %></div>
</fieldset>
<br>
<fieldset>
<Legend>Customers</Legend>

<table class="datatable">
  <thead>
    <tr>
      <th>Sortname</th>
      <th>Company</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Postal</th>
      <th>Street</th>
      <th>City</th>
      <th>Fax</th>
      <th>Mobile</th>
      <th>Website</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.sortname %></td>
        <td><%= customer.company %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.email %></td>
        <td><%= customer.postal %></td>
        <td><%= customer.street %></td>
        <td><%= customer.city %></td>
        <td><%= customer.fax %></td>
        <td><%= customer.mobile %></td>
        <td><%= customer.website %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</fieldset>

<br>
